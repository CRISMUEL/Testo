<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rltv1">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="42dp"
                android:background="@drawable/logo" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rltv1"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:text="Usuario"
                android:textSize="22sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_marginStart="25dp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usuario"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="Contrase単a"
                android:textSize="22sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/contrase単a"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_marginStart="25dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contrase単a"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Iniciar sesion"
                android:textColor="?attr/colorBackgroundFloating"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn2"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:text="多Aun no se ha registrado?" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn2"
                android:layout_marginStart="215dp"
                android:layout_marginTop="20dp"
                android:onClick="registrarse"
                android:text="Registrese aqui"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Nota: requiere conexion a internet"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt4"
                android:layout_marginStart="150dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="btn2"
                android:text="Salir"
                android:textColor="?attr/colorBackgroundFloating" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>